SHELL = /bin/bash
#PREFIX := /home/leon/projects/lab
PREFIX := /usr/local

SRC := .
BINS := $(SRC)/bin
CONF := $(SRC)/conf
INCS := $(SRC)/include
LIBS := $(SRC)/lib
JMOD := $(SRC)/jmods
LEGL := $(SRC)/legal


options:
	@echo "Options"

install: install-bin install-inc install-lib install-dir

install-bin:
	# No dir in the bin folder
	for i in $(BINS)/*; do \
		cp $$i $(PREFIX)/bin/ ; \
	done

install-inc:
	# linux is a dir; thus -r
	for i in $(INCS)/*; do \
			cp -r $$i $(PREFIX)/include/ ; \
	done

install-lib:
	# several dirs
	for i in $(LIBS)/*; do \
			cp -r $$i $(PREFIX)/lib/ ; \
	done

install-dir:
	cp -r $(CONF) $(PREFIX)/ || exit 1
	cp -r $(JMOD) $(PREFIX)/ || exit 1
	cp -r $(LEGL) $(PREFIX)/ || exit 1

uninstall: uninstall-bin uninstall-inc uninstall-lib uninstall-dir

uninstall-bin:
	for b in $(BINS)/* ; do \
		rm -rf $(PREFIX)/bin/`basename $$b` || exit 1 ; \
	done

uninstall-inc:
	for b in $(INCS)/* ; do \
		rm -rf $(PREFIX)/include/`basename $$b` || exit 1 ; \
	done

uninstall-lib:
	for b in $(LIBS)/* ; do \
		rm -rf $(PREFIX)/lib/`basename $$b` || exit 1 ; \
	done

uninstall-dir:
	rm -rf $(PREFIX)/conf
	rm -rf $(PREFIX)/jmods
	rm -rf $(PREFIX)/legal

.PHONY: install uninstall \
				install-bin instal-inc install-lib install-dir \
				uninstall-bin uninstall-inc uninstall-lib uninstall-dir
