#! /bin/zsh 

# get battery info every 60s
# the intervals controlled by dwmblocks in blocks.h file

remaining=$( acpi | sed -r 's/.*([0-9][0-9]%).*/\1/' )
[[ "$remaining" < "30%" ]] && acpi | sed -r 's/Battery [0-9]: //;s/.*[Dd]ischarging, /ðŸ”‹/;s/[Cc]harging, /ðŸ”Œ/;s/([0-9][0-9]%).*/\1/';  

[[ "$remaining" < "50%" ]] && acpi | sed -r 's/Battery [0-9]: //;s/.*[Dd]ischarging, /ðŸ”‹/;s/[Cc]harging, /ðŸ”Œ/;s/([0-9][0-9]%).*/\1/';  

[[ "$remaining" < "70%" ]] && acpi | sed -r 's/Battery [0-9]: //;s/.*[Dd]ischarging, /ðŸ”‹/;s/[Cc]harging, /ðŸ”Œ/;s/([0-9][0-9]%).*/\1/';  

[[ "$remaining" < "90%" ]] && acpi | sed -r 's/Battery [0-9]: //;s/.*[Dd]ischarging, /ðŸ”‹/;s/[Cc]harging, /ðŸ”Œ/;s/([0-9][0-9]%).*/\1/';  

  
